{
    "swagger": "2.0",
    "info": {
        "description": "integration-manager API",
        "title": "integration-manager API",
        "contact": {}
    },
    "paths": {
        "/api/v1/oauth/login": {
            "post": {
                "description": "Api for users login",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Oauth"
                ],
                "summary": "Login api",
                "parameters": [
                    {
                        "description": "Login dto if grant_type=password",
                        "name": "loginData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.LoginDto"
                        }
                    },
                    {
                        "description": "RefreshTokenDto dto if grant_type=refresh_token",
                        "name": "refreshTokenData",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.RefreshTokenDto"
                        }
                    },
                    {
                        "type": "string",
                        "description": "token_type type [regular/ctl] if grant_type=password",
                        "name": "token_type",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/common.ResponseDTO"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/v1.JWTPayLoad"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "schema": {
                            "$ref": "#/definitions/common.ResponseDTO"
                        }
                    }
                }
            }
        },
        "/api/v1/users": {
            "post": {
                "description": "Api for users registration",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Registration api",
                "parameters": [
                    {
                        "description": "dto for creating user",
                        "name": "data",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.UserRegistrationDto"
                        }
                    },
                    {
                        "type": "string",
                        "description": "action [create_user] if admin wants to create new user",
                        "name": "action",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/common.ResponseDTO"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/common.ResponseDTO"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "common.ResponseDTO": {
            "type": "object",
            "properties": {
                "data": {},
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "v1.JWTPayLoad": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "v1.LoginDto": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "v1.RefreshTokenDto": {
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string"
                }
            }
        },
        "v1.ResourceWiseRolesDto": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "roles": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/v1.RoleDto"
                    }
                }
            }
        },
        "v1.RoleDto": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "v1.UserMetadata": {
            "type": "object",
            "properties": {
                "company_id": {
                    "type": "string"
                }
            }
        },
        "v1.UserRegistrationDto": {
            "type": "object",
            "properties": {
                "auth_type": {
                    "type": "string"
                },
                "created_date": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "metadata": {
                    "$ref": "#/definitions/v1.UserMetadata"
                },
                "password": {
                    "type": "string"
                },
                "phone": {
                    "type": "string"
                },
                "resource_permission": {
                    "$ref": "#/definitions/v1.UserResourcePermission"
                },
                "status": {
                    "type": "string"
                },
                "updated_date": {
                    "type": "string"
                }
            }
        },
        "v1.UserResourcePermission": {
            "type": "object",
            "properties": {
                "metadata": {
                    "$ref": "#/definitions/v1.UserMetadata"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/v1.ResourceWiseRolesDto"
                    }
                },
                "user_id": {
                    "type": "string"
                }
            }
        }
    }
}